{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
  },
  "include": ["./src/**/*"]
}
